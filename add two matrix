#include<stdio.h>

int main()
{
	int a[2][2], i, j, b[2][2];
	printf("enter a matrix\n");
	for(i = 0; i < 2; i++)
	{
		for(j = 0; j < 2; j++)
		{
			scanf("%d", &a[i][j]);
		}
	}
	printf("matrix1 :\n");
	for(i = 0; i < 2; i++)
	{
		for(j = 0; j < 2; j++)
		{
			printf("%d ", a[i][j]);
		}
		printf("\n");
	}

	printf("enter a matrix\n");
	for(i = 0; i < 2; i++)
	{
		for(j = 0; j < 2; j++)
		{
			scanf("%d", &b[i][j]);
		}
	}
	printf("matrix2 :\n");
	for(i = 0; i < 2; i++)
	{
		for(j = 0; j < 2; j++)
		{
			printf("%d ", b[i][j]);
		}
		printf("\n");
	}

	printf("multiplication of two matrices :\n");
	for(i = 0; i < 2; i++)
	{
		for(j = 0; j < 2; j++)
		{
			printf("%d ", b[i][j] + a[i][j]);
		}
		printf("\n");
    }

    return 0;
}
